properties([
    pipelineTriggers([
        githubPush()
    ])
])

pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "your-github-username/your-repo-name"
        DOCKER_REGISTRY_CREDENTIALS = credentials('github-container-registry-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${DOCKER_IMAGE}:${GIT_COMMIT} .'
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'echo $DOCKER_REGISTRY_CREDENTIALS_PSW | docker login ghcr.io -u $DOCKER_REGISTRY_CREDENTIALS_USR --password-stdin'
                sh 'docker push ghcr.io/${DOCKER_IMAGE}:${GIT_COMMIT}'
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}